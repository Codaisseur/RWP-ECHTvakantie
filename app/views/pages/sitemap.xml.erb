<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= root_url %></loc>
    <lastmod><%= File.mtime(Rails.root.join("app", "views", "themes", "index.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  <url>
    <loc><%= over_ons_path %></loc>
    <lastmod><%= File.mtime(Rails.root.join("app", "views", "pages", "over_ons.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <url>
    <loc><%= contact_path %></loc>
    <lastmod><%= File.mtime(Rails.root.join("app", "views", "pages", "contact.html.slim")).strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.2</priority>
  </url>
  <% Theme.all.each do | theme | %>
    <url>
      <loc><%= theme_path(theme) %></loc>
      <lastmod><%= theme.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.5</priority>
    </url>
  <% end %>
  <% Vacation.all.each do | vacation | %>
    <url>
      <loc><%= vacation_path(vacation) %></loc>
      <lastmod><%= vacation.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.5</priority>
    </url>
  <% end %>
 </urlset>